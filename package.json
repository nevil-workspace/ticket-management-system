{
  "name": "ticket-management-system",
  "version": "1.0.0",
  "description": "Full-stack ticket management system",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "setup": "npm run install:all && cd backend && npx prisma generate && npx prisma migrate dev",
    "format": "prettier --write 'frontend/**/*.{js,jsx,ts,tsx,json,css,md}' 'backend/**/*.{js,jsx,ts,tsx,json,md}'"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  },
  "packageManager": "pnpm@9.14.4"
}